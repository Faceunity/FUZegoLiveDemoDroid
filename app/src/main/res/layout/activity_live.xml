                        android:layout_weight="1"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>

                    <com.zego.livedemo5.ui.widgets.ViewLive
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_control_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llyt_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@android:color/transparent">


                <TextView
                    android:id="@+id/tv_log_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/log"
                    android:textColor="@color/sl_btn"
                    android:textSize="@dimen/text_size_5"/>

                <TextView
                    android:id="@+id/tv_speaker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/mute"
                    android:textColor="@color/sl_btn"
                    android:textSize="@dimen/text_size_5"/>

                <TextView
                    android:id="@+id/tv_publish_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/publish_setting"
                    android:textColor="@color/sl_btn"
                    android:textSize="@dimen/text_size_5"/>

                <TextView
                    android:id="@+id/tv_publish_control"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/sl_btn"
                    android:textSize="@dimen/text_size_5"/>

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/close"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_5"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_header"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:textColor="@color/sl_btn"
                android:textSize="@dimen/text_size_5"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_play_mixstream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_tag"
                android:layout_below="@id/tv_tag"
                android:text="@string/play_mixstream"
                android:textColor="@color/sl_btn"
                android:textSize="@dimen/text_size_5"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_40"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_play_mixstream"
                android:layout_marginRight="@dimen/dimen_5"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/sl_btn"
                android:textSize="@dimen/text_size_5"/>

            <EditText
                android:id="@+id/et_msg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_play_mixstream"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_toLeftOf="@id/tv_send"
                android:text="say something"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_5"/>

            <ListView
                android:id="@+id/lv_comments"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_below="@id/et_msg"
                android:layout_marginLeft="5dp"
                android:divider="#00000000"/>

            <LinearLayout
                android:id="@+id/main_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical">

                <!--hint text-->
                <!--effect, filter and beauty related select-->
                <!--button choose group-->

                <TextView
                    android:id="@+id/hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"/>

                <!--start of effect beauty select-->
                <FrameLayout
                    android:id="@+id/effect_beauty_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                    <!--effect select-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/effect_recycle_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"/>
                    <!--filter select-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/filter_recycle_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:visibility="gone"/>
                    <!--blur level select-->
                    <LinearLayout
                        android:id="@+id/blur_level_select_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/blur_level0"
                            android:layout_width="@dimen/blur_circle_size"
                            android:layout_height="@dimen/blur_circle_size"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/normal_space"
                            android:background="@drawable/zero_blur_level_item_unselected"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/blur_level1"
                            android:layout_width="@dimen/blur_circle_size"
                            android:layout_height="@dimen/blur_circle_size"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/min_space"
                            android:background="@drawable/blur_level_item_unselected"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="1"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/blur_level2"
                            android:layout_width="@dimen/blur_circle_size"
                            android:layout_height="@dimen/blur_circle_size"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/min_space"
                            android:background="@drawable/blur_level_item_unselected"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="2"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/blur_level3"
                            android:layout_width="@dimen/blur_circle_size"
                            android:layout_height="@dimen/blur_circle_size"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/min_space"
                            android:background="@drawable/blur_level_item_unselected"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="3"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/blur_level4"
                            android:layout_width="@dimen/blur_circle_size"
                            android:layout_height="@dimen/blur_circle_size"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/min_space"
                            android:background="@drawable/blur_level_item_unselected"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="4"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/blur_level5"
                            android:layout_width="@dimen/blur_circle_size"
                            android:layout_height="@dimen/blur_circle_size"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/min_space"
                            android:background="@drawable/blur_level_item_unselected"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="5"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/blur_level6"
                            android:layout_width="@dimen/blur_circle_size"
                            android:layout_height="@dimen/blur_circle_size"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/min_space"
                            android:background="@drawable/blur_level_item_selected"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:text="6"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp"/>
                    </LinearLayout>
                    <!--color level select-->
                    <LinearLayout
                        android:id="@+id/color_level_select_block"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:padding="@dimen/normal_space"
                        android:visibility="gone">

                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/color_level_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dsb_indicatorColor="@color/faceunityYellow"
                            app:dsb_indicatorElevation="0dp"
                            app:dsb_indicatorPopupEnabled="true"
                            app:dsb_max="100"
                            app:dsb_min="0"
                            app:dsb_progressColor="@color/faceunityYellow"
                            app:dsb_scrubberHeight="2dp"
                            app:dsb_thumbSize="16dp"
                            app:dsb_value="20"/>
                    </LinearLayout>
                    <!--red level select-->
                    <LinearLayout
                        android:id="@+id/red_level_select_block"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:padding="@dimen/normal_space"
                        android:visibility="gone">

                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/red_level_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dsb_indicatorColor="@color/faceunityYellow"
                            app:dsb_indicatorElevation="0dp"
                            app:dsb_indicatorPopupEnabled="true"
                            app:dsb_max="100"
                            app:dsb_min="0"
                            app:dsb_progressColor="@color/faceunityYellow"
                            app:dsb_scrubberHeight="2dp"
                            app:dsb_thumbSize="16dp"
                            app:dsb_value="50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_face_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/normal_space">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:text="脸型"
                                android:textColor="@color/faceunityYellow"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/face_shape_3_default"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="15dp"
                                android:background="@color/faceunityYellow"
                                android:gravity="center"
                                android:text="默认"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/face_shape_0_nvshen"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="15dp"
                                android:background="@color/unselect_gray"
                                android:gravity="center"
                                android:text="女神"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/face_shape_1_wanghong"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="15dp"
                                android:background="@color/unselect_gray"
                                android:gravity="center"
                                android:text="网红"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/face_shape_2_ziran"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="15dp"
                                android:background="@color/unselect_gray"
                                android:gravity="center"
                                android:text="自然"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <!--face shape select-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="center"
                            android:padding="@dimen/normal_space">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="程度"
                                android:textColor="@color/faceunityYellow"
                                android:textSize="17sp"/>

                            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                                android:id="@+id/face_shape_seekbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dsb_indicatorColor="@color/faceunityYellow"
                                app:dsb_indicatorElevation="0dp"
                                app:dsb_indicatorPopupEnabled="true"
                                app:dsb_max="100"
                                app:dsb_min="0"
                                app:dsb_progressColor="@color/faceunityYellow"
                                app:dsb_scrubberHeight="2dp"
                                app:dsb_thumbSize="16dp"
                                app:dsb_value="50"/>
                        </LinearLayout>
                        <!--enlarge eye select-->
                        <LinearLayout
                            android:id="@+id/enlarge_eye_level_select_block"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="center"
                            android:padding="@dimen/normal_space">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="大眼"
                                android:textColor="@color/faceunityYellow"
                                android:textSize="17sp"/>

                            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                                android:id="@+id/enlarge_eye_level_seekbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dsb_indicatorColor="@color/faceunityYellow"
                                app:dsb_indicatorElevation="0dp"
                                app:dsb_indicatorPopupEnabled="true"
                                app:dsb_max="100"
                                app:dsb_min="0"
                                app:dsb_progressColor="@color/faceunityYellow"
                                app:dsb_scrubberHeight="2dp"
                                app:dsb_thumbSize="16dp"
                                app:dsb_value="50"/>
                        </LinearLayout>
                        <!--cheek thin select-->
                        <LinearLayout
                            android:id="@+id/cheekthin_level_select_block"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/normal_space">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="瘦脸"
                                android:textColor="@color/faceunityYellow"
                                android:textSize="17sp"/>

                            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                                android:id="@+id/cheekthin_level_seekbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dsb_indicatorColor="@color/faceunityYellow"
                                app:dsb_indicatorElevation="0dp"
                                app:dsb_indicatorPopupEnabled="true"
                                app:dsb_max="100"
                                app:dsb_min="0"
                                app:dsb_progressColor="@color/faceunityYellow"
                                app:dsb_scrubberHeight="2dp"
                                app:dsb_thumbSize="16dp"
                                app:dsb_value="50"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout> <!--end of effect select-->
                <!--start of button select-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/percent60translucentBlack"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_choose_effect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
