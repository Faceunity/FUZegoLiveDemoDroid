<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="@string/roomid_flag_in_tv" />

                <TextView
                    android:id="@+id/tv_im_room"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="UserIDï¼š" />

                <TextView
                    android:id="@+id/tv_im_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="#E6E6E6"
                    android:text="@string/tx_im_msg_list"
                    android:textStyle="bold" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_im_message"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#E6E6E6"
                android:divider="@null"
                android:dividerHeight="0dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/tx_im_bc_msg"
                android:textColor="#1135E9"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:onClick="ClickSendBCMsg"
                    android:text="@string/tx_im_send" />

                <EditText
                    android:id="@+id/ed_bc_message"
                    style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@layout/et_circle_bg"
                    android:hint=""
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/tx_im_cc_msg"
                android:textColor="#1135E9"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#E6E6E6"
                    android:text="@string/tx_im_user_list"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_CheckBoxList"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#E6E6E6"
                    android:orientation="vertical"
                    android:scrollbarAlwaysDrawVerticalTrack="true"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:onClick="ClickSendCustomMsg"
                    android:text="@string/tx_im_send" />

                <EditText
                    android:id="@+id/ed_cc_message"
                    style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@layout/et_circle_bg"
                    android:hint=""
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/tx_im_bar_msg"
                android:textColor="#1135E9"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:onClick="ClickSendBarrageMsg"
                    android:text="@string/tx_im_send" />

                <EditText
                    android:id="@+id/ed_bar_message"
                    style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@layout/et_circle_bg"
                    android:hint=""
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>