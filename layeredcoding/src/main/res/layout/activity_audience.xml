<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_black">

        <TextureView
            android:id="@+id/play_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lc_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60ffffff">

                <LinearLayout
                    android:id="@+id/front_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/front_camera_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="前置摄像头"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"/>

                    <ToggleButton
                        android:id="@+id/tb_enable_front_cam"
                        style="@style/ToggleButtonText"
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:checked="true"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <Button
                    android:id="@+id/conference_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="请求连麦"
                    android:onClick="RequestBeAnchor"/>

                    <Button
                        android:id="@+id/quit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="退出直播"
                        android:onClick="QuitLiveRoom"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lc_layers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/front_camera"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lc_videoQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/front_camera"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/netQuality_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:text=""/>

                        <TextView
                            android:id="@+id/bitrate_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:text=""/>

                        <TextView
                            android:id="@+id/fps_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:text=""/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <Spinner
                        android:id="@+id/sp_layers"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:visibility="invisible" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/error_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="#FF0000"/>

            <TextureView
                android:id="@+id/preview_view"
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:layout_below="@id/lc_header"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/error_txt"
                android:layout_marginTop="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />
        </RelativeLayout>
    </FrameLayout>
</ScrollView>