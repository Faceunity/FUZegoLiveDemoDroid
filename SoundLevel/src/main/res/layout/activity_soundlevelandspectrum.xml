<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Roomid:   " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_soundlevelandspectrum_roomid" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <Switch
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/sw_soundlevelandspectrum_soundlevel_monitor"
                android:text="@string/sound_monitor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <Switch
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/sw_soundlevelandspectrum_spectrum_monitor"
                android:text="@string/spectrum_monitor" />

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_container">

            <include layout="@layout/activity_soundlevelandspectrum_layout_item" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>