<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="0.5dp"
                android:color="#000000"/>
            <corners android:radius="3dp"/>
            <solid android:color="#F5F5F5"/>
            <padding
                android:top="5dp"
                android:right="10dp"
                android:left="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>

    <item>
        <bitmap
            android:src="@drawable/updown"
            android:gravity="end"/>

    </item>
</layer-list>
